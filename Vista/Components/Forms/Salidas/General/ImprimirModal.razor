@using Vista.Data.ViewModels.Incendios;
@using Vista.Data.ViewModels.Personal;
@inject NavigationManager navigationManager

@*Despues de la Carga*@
<Modal Footer="null" Title="@("Success")"
       Visible="@_visible1"
       OnCancel="@HandleCancel1">
    <Result Status="success"
            Title="Se cargo correctamente la salida"
            SubTitle="">
    </Result>
    <p style="font-size: 20px;">Imprimir con croquis</p>
    <button @onclick="@(() => { navigationManager.NavigateTo($"/PlanillasIntervencion/Imprimir/{AnioNumeroParte}/{NumeroParte}/{true}", true); })">Si</button>
    <button @onclick="@(() => { navigationManager.NavigateTo($"/PlanillasIntervencion/Imprimir/{AnioNumeroParte}/{NumeroParte}/{false}", true); })">No</button>
</Modal>

@code {
    [Parameter] public int AnioNumeroParte { get; set; }
    [Parameter] public int NumeroParte { get; set; }

    bool _visible1 = true;

    void HandleCancel1()
    {
        _visible1 = false;
    }
}