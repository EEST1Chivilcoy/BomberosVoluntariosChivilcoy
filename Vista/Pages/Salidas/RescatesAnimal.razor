        @*Datos generales de las salidas*@
        <FormItem Label="Descripcion">
            <Input @bind-Value="@AnimalViewModel.Descripcion" />
        </FormItem>
        <FormItem Label="Dato Hora salida">
            <DatePicker TValue="DateTime" ShowTime="@true" OnChange="OnChange" @bind-Value="@AnimalViewModel.HoraSalida" />
        </FormItem>
        <FormItem Label="Dato Hora llegada">
