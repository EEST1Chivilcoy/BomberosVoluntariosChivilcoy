    .historial-moviles-abm .modern-button.blue-gradient:hover {
        transform: translateY(-2px) !important;
        box-shadow: 0 6px 20px rgba(24, 144, 255, 0.4) !important;
    }

    .historial-moviles-abm .table-container {
        padding: 0 !important;
        overflow: hidden !important;
        margin-top: 0 !important;
    }

        .historial-moviles-abm .ant-table-wrapper {
        margin-top: 0 !important;
