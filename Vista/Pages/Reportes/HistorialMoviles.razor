        pointer-events: none;
        z-index: 1;
        overflow: hidden;
    }

    .historial-moviles-abm .header-section .lava-bubble {
        position: absolute;
        border-radius: 50%;
        opacity: 0.45;
        background: radial-gradient(circle at 60% 40%, #FFD54F 0%, #F9A825 80%, transparent 100%);
        animation: lava-bubble-move 8s linear infinite;
        filter: blur(1.5px);
        mix-blend-mode: lighten;
    }

    .historial-moviles-abm .header-section .lava-bubble.b1 {
        left: 10%; width: 60px; height: 60px; bottom: -70px;
        animation-delay: 0s; animation-duration: 7.5s;
    }

    .historial-moviles-abm .header-section .lava-bubble.b2 {
