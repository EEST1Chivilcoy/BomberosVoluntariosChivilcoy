@code {
	[Parameter] public EventCallback OnFinishCallback { get; set; }
	[Parameter] public EquipoAutonomo EquipoAutonomo { get; set; } = new();

	private bool isLoading = false;
	private EquipoAutonomoViewModel viewModel = new();

	private class EquipoAutonomoViewModel
	{
		public int Id { get; set; }

		[Required(ErrorMessage = "El nÃºmero de serie es obligatorio.")]
		public string NroSerie { get; set; } = string.Empty;

		public string? NroTubo { get; set; }
		public string? Marca { get; set; }
		public string? Modelo { get; set; }
		public string? TipoMaterial { get; set; }
	}

	protected override async Task OnInitializedAsync()
	{
		await LoadEquipoData();
	}

	private async Task OnFinish(EditContext editContext)
	{
		isLoading = true;

		try
		{
			var equipo = MapToModel(viewModel);
			await EquipoAutonomoService.EditarEquipoAutonomoAsync(equipo);
			await message.SuccessAsync("Equipo autÃ³nomo agregado correctamente.");

			viewModel = new(); // Reiniciar formulario
			await OnFinishCallback.InvokeAsync();
		}
		catch (Exception ex)
		{
			await message.ErrorAsync(ex.Message, 5);
		}
		finally
		{
			isLoading = false;
		}
	}

	private void OnFinishFailed(EditContext editContext)
	{
		message.Error("Error en el formulario. Verifique los datos.");
	}

	private async Task LoadEquipoData()
	{
		isLoading = true;
		if (EquipoAutonomo is null) return;

		viewModel = MapToViewModel(EquipoAutonomo);
		isLoading = false;
	}

	private EquipoAutonomo MapToModel(EquipoAutonomoViewModel vm) => new()
	{
		EquipoAutonomoId = vm.Id,
		NroSerie = vm.NroSerie,
		NroTubo = vm.NroTubo,
		Marca = vm.Marca,
		Modelo = vm.Modelo,
		TipoMaterial = vm.TipoMaterial,
	};

	private EquipoAutonomoViewModel MapToViewModel(EquipoAutonomo model) => new()
	{
		Id = model.EquipoAutonomoId,
		NroSerie = model.NroSerie,
		NroTubo = model.NroTubo,
		Marca = model.Marca,
		Modelo = model.Modelo,
		TipoMaterial = model.TipoMaterial,
	};
}