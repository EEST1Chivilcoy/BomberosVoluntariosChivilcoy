        color: #fff !important;
    }

    @@media (max-width: 1199px) {
        .modal-crear-equipo .ant-modal-content {
            max-width: 98vw;
        }
        .modal-crear-equipo-content {
            padding: 18px 10px;
            gap: 16px;
        }
        .modal-crear-equipo-form-row {
            grid-template-columns: 1fr;
            gap: 16px;
        }
    }
    @@media (max-width: 767px) {
        .modal-crear-equipo .ant-modal-content {
            max-width: 100vw;
        }
        .modal-crear-equipo-content {
            padding: 8px 2px;
            gap: 12px;
        }
        .modal-crear-equipo-form-row {
