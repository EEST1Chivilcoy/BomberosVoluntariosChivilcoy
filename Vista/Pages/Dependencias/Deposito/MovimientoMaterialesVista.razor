        font-family: 'Poppins', sans-serif !important;
        --primary-color: #f0f2f5;
        --primary-dark: #d9d9d9;
        --secondary-color: #2F54EB;
        --success-color: #52C41A;
        --success-dark: #449E17;
        --background-card: #FFFFFF;
        --background-body: #FFFFFF;
        --text-color: #262626;
        --border-color: #D9D9D9;
        --shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
    }

