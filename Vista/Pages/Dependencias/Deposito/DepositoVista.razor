</style>

<div class="licencias-abm">
    <div class="licenses-container fade-in">
        <Card Class="main-card">
            <div class="header-section">
                <div class="lava-bubbles">
                    <div class="lava-bubble b1"></div>
                    <div class="lava-bubble b2"></div>
                    <div class="lava-bubble b3"></div>
                    <div class="lava-bubble b4"></div>
                    <div class="lava-bubble b5"></div>
                </div>
                <div class="title-container">
                    <h1 class="main-title">
                        <Icon Type="tool" Class="title-icon" />
                        DEPÓSITO DE MATERIALES
                    </h1>
                </div>
                <div class="actions-row">
                    <Button Class="modern-button add-button" OnClick="() => ShowModalAgregar()" Icon="plus" Size="ButtonSize.Small">
                        Nuevo
                    </Button>
                    <Button Class="modern-button notification-button" @onclick="_ => visibleDrawer = true" Size="ButtonSize.Small">
                        <Icon Type="switcher" />
                    </Button>
                </div>
            </div>

            <div class="table-container">
                <Table DataSource="MaterialesVM" Bordered Responsive Style="min-width: 320px!important;" PageSize="6" Loading="isLoading">
                    <ColumnDefinitions Context="muestra">
                        <PropertyColumn Property="c => c.FechaAlta" Title="Fecha de Alta" Format="dd/MM/yyyy" Sortable />
                        <PropertyColumn Property="c => c.Descripcion" Title="Descripción" Sortable />
                        <PropertyColumn Property="c => c.Rubro.GetDisplayName()" Title="Rubro" Sortable />
                        <PropertyColumn Property="c => c.Stock" Title="Stock" Sortable />
                        <PropertyColumn Property="c => c.Codigo" Title="Código" Sortable />
                        <ActionColumn Title="Acciones">
                            <Space>
                                <SpaceItem>
                                    <Button Type="@ButtonType.Primary" OnClick="() => ShowModalEditar(muestra.MaterialId)">
                                        <Icon Type="edit" />
                                    </Button>
                                </SpaceItem>
                            </Space>
                        </ActionColumn>
                    </ColumnDefinitions>
                </Table>
            </div>
        </Card>
    </div>
</div>

<div>
    @if (visibleDrawer == true)
    {
        <Modal Visible="visibleDrawer"
               Width="1300"
               Title='Movimientos'
               OnCancel="close"
               Footer="null"
               Centered="true">
            <MovimientoMaterialesVista />
        </Modal>
    }
</div>

<Modal Footer="null" Title="@("Cargar Material")"
       Visible="@_visibleAgregar"
       Width="800"
       OnCancel="@(() => _visibleAgregar = false)">
    <AgregarMaterial MaterialesExistentes="Materiales" OnFinishCallback="OnFinish" />
</Modal>
<Modal Footer="null" Title="@("Editar Material")"
       Visible="@_visibleEditar"
       Width="800"
       OnCancel="@(() => _visibleEditar = false)">
    <EditarMaterial Material="MaterialSeleccionado" MaterialesExistentes="Materiales" OnFinishCallback="OnFinish" />
</Modal>

@code {
    bool visibleDrawer = false;
    bool isLoading = true;

    public class MaterialVM
    {
        public int MaterialId { get; set; }
        [Required]
        public DateTime FechaAlta { get; set; }
        public string? Descripcion { get; set; }
        public string? Codigo { get; set; }
        public int Stock { get; set; }
        public TipoRubro Rubro { get; set; }
    }

    // variables locales
    public bool _visibleAgregar = false;
    public bool _visibleEditar = false;
    List<MaterialVM> MaterialesVM = new();
    private Material? MaterialSeleccionado;
    List<Material> Materiales = new();

    private async void ShowModalAgregar()
    {
        _visibleAgregar = true;
        await Init();
    }

    public async Task ShowModalEditar(int materialId)
    {
        try
        {
            MaterialSeleccionado = await DepositoService.ObtenerMaterialAsync(materialId);
            if (MaterialSeleccionado == null)
            {
                message.Error("No se encontró el Material seleccionado");
                return;
            }
        }
        catch (Exception ex)
        {
            message.Error($"Error al cargar el material {ex.Message}");
            return;
        }
        _visibleEditar = true;
    }

    private async Task OnFinish()
    {
        _visibleEditar = false;
        _visibleAgregar = false;
        await Init();
    }

    private async Task close()
    {
        visibleDrawer = false;
        await Init();
    }

    protected override async Task OnInitializedAsync()
    {
        await Init();
    }

    // Aca agregamos los metodos creados orientado a vista
    private async Task Init()
    {
        try
        {
            isLoading = true;
            MaterialesVM = new();
            Materiales = await DepositoService.ObtenerMaterialesAsync();
            MaterialesVM = Materiales.Select(material => new MaterialVM
            {
                MaterialId = material.MaterialId,
                FechaAlta = material.FechaAlta,
                Descripcion = material.Descripcion,
                Rubro = material.Rubro,
                Codigo = material.Codigo,
                Stock = material.Stock
            }).ToList();
        }
        catch (Exception e)
        {
            message.Error(e.Message, 5);
        }
        finally
        {
            isLoading = false;
        }
    }
}