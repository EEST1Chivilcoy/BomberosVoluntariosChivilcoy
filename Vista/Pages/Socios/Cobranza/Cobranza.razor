                                <span style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                    @(socio.Domicilio?.Length > 40 ? socio.Domicilio.Substring(0, 40) + "..." : socio.Domicilio)
                                </span>
                            </div>

                            @if (socio.Zona != null && socio.Zona != Zona.Ninguna)
                            {
                                <div class="info-row">
                                    <i class="fa-solid fa-map-marker-alt"></i>
                                    <span class="zona-badge">@socio.Zona.GetDisplayName()</span>
                                </div>
                            }

                            <div class="card-actions">
                                @* Botón normal para desktop *@
                                <div class="desktop-only" style="flex: 1;">
                                    <Button Type="@ButtonType.Primary"
                                            Class="btn-pago"
                                            Style="width: 100%;"
                                            OnClick="@(() => AbrirModalPago(socio))"
                                            AriaLabel="@($"Registrar pago para {socio.NombreApellidoONombreEmpresa}")">
                                        <Icon Type="dollar" /> Registrar Pago
                                    </Button>
                                </div>

                                @* Slide to unlock para móvil *@
                                <div class="mobile-only" style="flex: 1;">
                                    <div class="slide-to-unlock-container"
                                         id="slide-container-@socioId"
                                         @ontouchstart="@(e => OnSlideStart(e, socio))"
                                         @ontouchmove="@(e => OnSlideMove(e, socio))"
                                         @ontouchend="@(e => OnSlideEnd(e, socio))"
                                         @onmousedown="@(e => OnMouseSlideStart(e, socio))"
                                         @onmousemove="@(e => OnMouseSlideMove(e, socio))"
                                         @onmouseup="@(e => OnMouseSlideEnd(e, socio))"
                                         @onmouseleave="@(e => OnMouseSlideEnd(e, socio))">
                                        <div class="slide-success-bg" style="width: @(GetSlideProgress(socioId))%;"></div>
                                        <div class="slide-track">
                                            <span class="slide-text" style="opacity: @(1 - GetSlideProgress(socioId) / 100);">
                                                <Icon Type="arrow-right" /> Deslizar para pagar
                                            </span>
                                        </div>
                                        <div class="slide-thumb @(IsSlideUnlocked(socioId) ? "unlocked" : "")"
                                             style="left: @(4 + GetSlideProgress(socioId) * 2.5)px;">
                                            <Icon Type="dollar" />
                                        </div>
                                    </div>
                                </div>

                                <Button Type="@ButtonType.Primary"
                                        Class="btn-ubicacion"
                                        OnClick="@(() => AbrirGoogleMaps(socio))"
                                        Disabled="@(socio.Latitud == 0 && socio.Longitud == 0)"
                                        AriaLabel="@($"Ver ubicación de {socio.NombreApellidoONombreEmpresa} en Google Maps")">
                                    <Icon Type="environment" /> Ver Mapa
                                </Button>
                            </div>
                        </Card>
                    }
                </div>
            </div>
        }
    </Card>

    @* ======================================== MODAL DE PAGO ======================================== *@
    <Modal @bind-Visible="@ModalPagoVisible"
           Title="@($"💵 Registrar Pago - N° {SocioSeleccionado?.NumeroSocio}")"
           Width="500"
           Footer="null"
           WrapClassName="modal-pago"
           DestroyOnClose
           Centered>
        <RegistrarPago Socio="@SocioSeleccionado"
                       OnCancel="@CerrarModalPago"
                       OnPagoConfirmado="@OnPagoConfirmado" />
    </Modal>
</div>

@code {
    // ======================================== PROPIEDADES ========================================

    private List<Socio>? Socios { get; set; } = new();
    private List<CobranzaViewModel> CobranzaViewModels { get; set; } = new();
    private List<CobranzaViewModel> SociosFiltrados { get; set; } = new();

    private string TextoBusqueda { get; set; } = string.Empty;
    private bool Cargando { get; set; } = true;
    private bool ModalPagoVisible { get; set; } = false;

    private CobranzaViewModel? SocioSeleccionado { get; set; }

    // Filtro de zona
    private Zona? ZonaSeleccionada { get; set; } = null;
    private List<ZonaFiltroItem> ZonasFiltro { get; set; } = new();

    // Slide to unlock state
    private Dictionary<int, double> SlideProgress { get; set; } = new();
    private Dictionary<int, bool> SlideActive { get; set; } = new();
    private Dictionary<int, double> SlideStartX { get; set; } = new();

    // ======================================== CLASES AUXILIARES ========================================

    public class ZonaFiltroItem
    {
        public string Nombre { get; set; } = string.Empty;
        public Zona? Valor { get; set; }
    }

    // ======================================== LIFECYCLE ========================================

    protected override async Task OnInitializedAsync()
    {
        InicializarFiltroZonas();
        await CargarSocios();
    }

    // ======================================== MÉTODOS DE CARGA ========================================

    private void InicializarFiltroZonas()
    {
        ZonasFiltro = new List<ZonaFiltroItem>
        {
            new ZonaFiltroItem { Nombre = "Todas las zonas", Valor = null }
        };

        foreach (Zona zona in Enum.GetValues(typeof(Zona)))
        {
            if (zona != Zona.Ninguna)
            {
                ZonasFiltro.Add(new ZonaFiltroItem
                {
                    Nombre = zona.GetDisplayName(),
                    Valor = zona
                });
            }
        }
    }

    private async Task CargarSocios()
    {
        Cargando = true;
        StateHasChanged();

        try
        {
            Socios = await SocioService.ObtenerSociosAsync();

            if (Socios != null)
            {
                var socios = Socios
                    .Where(s => s.FormaPago == FormaDePago.Efectivo)
                    .ToList();

                var cobranzaViewModels = new List<CobranzaViewModel>();

                foreach (var s in socios)
                {
                    var saldo = await SaldoSocioService.CalcularSaldoActualAsync(s.Id);

                    cobranzaViewModels.Add(new CobranzaViewModel
                    {
                        SocioId = s.Id,
                        NumeroSocio = s.NroSocio,
                        NombreApellidoONombreEmpresa = s.Tipo == TipoSocio.Persona
                            ? $"{s.Apellido}, {s.Nombre}"
                            : s.Nombre ?? "Sin nombre",
                        DocumentoORazonSocial = s.DocumentoOCUIT ?? "Sin documento",
                        Domicilio = s.Direccion ?? "Sin dirección",
                        Saldo = saldo,
                        Latitud = (decimal)s.Latitud,
                        Longitud = (decimal)s.Longitud,
                        Telefono = s.Telefono,
                        MontoCuota = (decimal)s.MontoCuota,
                        Zona = s.Zona
                    });
                }

                CobranzaViewModels = cobranzaViewModels
                    .OrderBy(s => s.Saldo)
                    .ThenBy(s => s.NombreApellidoONombreEmpresa)
                    .ToList();

                // Inicializar estado del slide para cada socio
                foreach (var socio in CobranzaViewModels)
                {
                    SlideProgress[socio.SocioId] = 0;
                    SlideActive[socio.SocioId] = false;
                    SlideStartX[socio.SocioId] = 0;
                }

                AplicarFiltro();
            }
        }
        catch (Exception ex)
        {
            await MessageService.ErrorAsync($"Error al cargar los socios: {ex.Message}");
            Console.WriteLine($"Error al cargar los socios: {ex.Message}");
        }
        finally
        {
            Cargando = false;
            StateHasChanged();
        }
    }

    // ======================================== BÚSQUEDA Y FILTRADO ========================================

    private void OnBusquedaInput(ChangeEventArgs e)
    {
        TextoBusqueda = e.Value?.ToString() ?? string.Empty;
        AplicarFiltro();
    }

    private void OnZonaChanged(ZonaFiltroItem? item)
    {
        ZonaSeleccionada = item?.Valor;
        AplicarFiltro();
    }

    private void AplicarFiltro()
    {
        var query = CobranzaViewModels.AsEnumerable();

        // Filtro por texto
        if (!string.IsNullOrWhiteSpace(TextoBusqueda))
        {
            var busqueda = TextoBusqueda.ToLower().Trim();
            query = query.Where(s =>
                (s.NombreApellidoONombreEmpresa?.ToLower().Contains(busqueda) ?? false) ||
                s.NumeroSocio.ToString().Contains(busqueda) ||
                (s.DocumentoORazonSocial?.ToLower().Contains(busqueda) ?? false) ||
                (s.Domicilio?.ToLower().Contains(busqueda) ?? false));
        }

        // Filtro por zona
        if (ZonaSeleccionada != null)
        {
            query = query.Where(s => s.Zona == ZonaSeleccionada);
        }

        SociosFiltrados = query
            .OrderBy(s => s.Saldo)
            .ThenBy(s => s.NombreApellidoONombreEmpresa)
            .ToList();

        StateHasChanged();
    }

    // ======================================== SLIDE TO UNLOCK ========================================

    private double GetSlideProgress(int socioId)
    {
        return SlideProgress.TryGetValue(socioId, out var progress) ? progress : 0;
    }

    private bool IsSlideUnlocked(int socioId)
    {
        return GetSlideProgress(socioId) >= 95;
    }

    private void OnSlideStart(TouchEventArgs e, CobranzaViewModel socio)
    {
        if (e.Touches.Length > 0)
        {
            SlideActive[socio.SocioId] = true;
            SlideStartX[socio.SocioId] = e.Touches[0].ClientX;
        }
    }

    private void OnSlideMove(TouchEventArgs e, CobranzaViewModel socio)
    {
        if (!SlideActive.TryGetValue(socio.SocioId, out var active) || !active) return;
        if (e.Touches.Length == 0) return;

        var currentX = e.Touches[0].ClientX;
        var startX = SlideStartX.TryGetValue(socio.SocioId, out var sx) ? sx : 0;
        var deltaX = currentX - startX;

        var maxSlide = 200;
        var progress = Math.Max(0, Math.Min(100, (deltaX / maxSlide) * 100));

        SlideProgress[socio.SocioId] = progress;
        StateHasChanged();
    }

    private async Task OnSlideEnd(TouchEventArgs e, CobranzaViewModel socio)
    {
        if (!SlideActive.TryGetValue(socio.SocioId, out var active) || !active) return;

        SlideActive[socio.SocioId] = false;

        if (GetSlideProgress(socio.SocioId) >= 95)
        {
            // Desbloqueado - abrir modal
            SlideProgress[socio.SocioId] = 100;
            StateHasChanged();

            await Task.Delay(200); // Pequeña animación
            AbrirModalPago(socio);

            // Reset
            SlideProgress[socio.SocioId] = 0;
        }
        else
        {
            // No llegó al final - resetear
            SlideProgress[socio.SocioId] = 0;
        }

        StateHasChanged();
    }

    // Mouse events para testing en desktop
    private void OnMouseSlideStart(MouseEventArgs e, CobranzaViewModel socio)
    {
        SlideActive[socio.SocioId] = true;
        SlideStartX[socio.SocioId] = e.ClientX;
    }

    private void OnMouseSlideMove(MouseEventArgs e, CobranzaViewModel socio)
    {
        if (!SlideActive.TryGetValue(socio.SocioId, out var active) || !active) return;

        var startX = SlideStartX.TryGetValue(socio.SocioId, out var sx) ? sx : 0;
        var deltaX = e.ClientX - startX;

        var maxSlide = 200;
        var progress = Math.Max(0, Math.Min(100, (deltaX / maxSlide) * 100));

        SlideProgress[socio.SocioId] = progress;
        StateHasChanged();
    }

    private async Task OnMouseSlideEnd(MouseEventArgs e, CobranzaViewModel socio)
    {
        if (!SlideActive.TryGetValue(socio.SocioId, out var active) || !active) return;

        SlideActive[socio.SocioId] = false;

        if (GetSlideProgress(socio.SocioId) >= 95)
        {
            // Desbloqueado - abrir modal
            SlideProgress[socio.SocioId] = 100;
            StateHasChanged();

            await Task.Delay(200); // Pequeña animación
            AbrirModalPago(socio);

            // Reset
            SlideProgress[socio.SocioId] = 0;
        }
        else
        {
            // No llegó al final - resetear
            SlideProgress[socio.SocioId] = 0;
        }

        StateHasChanged();
    }

    // ======================================== MODAL DE PAGO ========================================

    private void AbrirModalPago(CobranzaViewModel socio)
    {
        SocioSeleccionado = socio;
        ModalPagoVisible = true;
    }

    private void CerrarModalPago()
    {
        ModalPagoVisible = false;
        SocioSeleccionado = null;
    }

    private async Task OnPagoConfirmado(PagoEfectivo pago)
    {
        try
        {
            await PagoService.AgregarPagoAsync(pago.SocioId, pago);

            await MessageService.SuccessAsync($"Pago de ${pago.Monto:N2} registrado correctamente para {SocioSeleccionado?.NombreApellidoONombreEmpresa}");

            CerrarModalPago();
            await CargarSocios();
        }
        catch (Exception ex)
        {
            await MessageService.ErrorAsync($"Error al registrar el pago: {ex.Message}");
        }
    }

    // ======================================== GOOGLE MAPS ========================================

    private async Task AbrirGoogleMaps(CobranzaViewModel socio)
    {
        if (socio.Latitud == 0 && socio.Longitud == 0)
        {
            MessageService.Warning("Este socio no tiene coordenadas de ubicación registradas.");
            return;
        }

        var url = $"https://www.google.com/maps/search/?api=1&query={socio.Latitud.ToString(System.Globalization.CultureInfo.InvariantCulture)},{socio.Longitud.ToString(System.Globalization.CultureInfo.InvariantCulture)}";

        await JSRuntime.InvokeVoidAsync("window.open", url, "_blank");
    }
