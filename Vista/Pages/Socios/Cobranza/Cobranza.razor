<div class="cobranza-container fade-in" role="main">
    <Card Class="main-card">
        @* ======================================== HEADER SECTION ======================================== *@
        <div class="header-section">
            <div class="lava-bubbles">
                <div class="lava-bubble b1"></div>
                <div class="lava-bubble b2"></div>
                <div class="lava-bubble b3"></div>
                <div class="lava-bubble b4"></div>
                <div class="lava-bubble b5"></div>
            </div>

            <div class="title-container">
                <h1 class="main-title">
                    <Icon Type="dollar" Class="title-icon" />
                    COBRANZA
                </h1>
            </div>

            <div class="filters-section">
                <div class="filter-row">
                    <div class="filter-group" style="flex: 2;">
                        <label class="filter-label">🔍 Buscar</label>
                        <Search Placeholder="Buscar por nombre, N° socio, documento o dirección..."
                                @bind-Value="@TextoBusqueda"
                                Size="InputSize.Large"
                                AllowClear
                                EnterButton="true"
                                OnSearch="@(() => AplicarFiltro())"
                                @oninput="OnBusquedaInput" />
                    </div>

                    <div class="filter-group">
                        <label class="filter-label">📍 Zona</label>
                        <Select TItem="ZonaFiltroItem"
                                TItemValue="Zona ?"
                                DataSource="@ZonasFiltro"
                                @bind-Value="@ZonaSeleccionada"
                                LabelName="@nameof(ZonaFiltroItem.Nombre)"
                                ValueName="@nameof(ZonaFiltroItem.Valor)"
                                Placeholder="Todas las zonas"
                                AllowClear
                                OnSelectedItemChanged="@OnZonaChanged"
                                Size="InputSize.Large" />
                    </div>
                </div>
            </div>
        </div>

        @* ======================================== CONTENIDO PRINCIPAL ======================================== *@
        @if (Cargando)
        {
            <div class="loading-container">
                <Spin Size="@SpinSize.Large" Tip="Cargando socios..." />
            </div>
        }
        else if (SociosFiltrados == null || !SociosFiltrados.Any())
        {
            <div class="empty-state">
                <i class="fa-solid fa-users-slash"></i>
                <div class="empty-state-title">No se encontraron socios</div>
                <div class="empty-state-description">
                    @if (!string.IsNullOrWhiteSpace(TextoBusqueda) || ZonaSeleccionada != null)
                    {
                        <span>No hay resultados para los filtros aplicados</span>
                    }
                    else
                    {
                        <span>No hay socios con forma de pago en efectivo registrados en el sistema</span>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="cards-container">
                <div class="cards-grid" role="list" aria-label="Lista de socios para cobranza">
                    @foreach (var socio in SociosFiltrados)
                    {
