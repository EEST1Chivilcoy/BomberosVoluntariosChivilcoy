@page "/Bomberos/Legajo"

<link rel="stylesheet" href="css/LegajoEstilos.css" />

<PageTitle>Panel de Control de Legajos</PageTitle>

<Layout>
    <Content>
        <div class="main-container">
            <Row Gutter="30">
                <AntDesign.Col Xs="24" Sm="24" Md="24" Lg="8" Xl="6">
                    <div class="profile-section">
                        <div class="avatar-container">
                            <Avatar Icon="user" Class="profile-avatar" />
                        </div>

                        <Card Bordered="false" Class="profile-card">
                            <div class="profile-content">
                                <div class="profile-header">
                                    <div class="name-box">AGUSTIN ESTEBAN ROSSI</div>
                                    <div class="subtitle-text">AYUDANTE MAYOR</div>
                                </div>

                                <div class="info-block">
                                    <div class="label">D.N.I</div>
                                    <Input Value="@("36.997.084")" Disabled />
                                </div>
                                <div class="info-block">
                                    <div class="label">LEGAJO</div>
                                    <Input Value="@("170")" Disabled />
                                </div>
                                <div class="info-block">
                                    <div class="label">CUERPO</div>
                                    <div class="value-box">Sociedad de Bomberos Voluntarios Chivilcoy</div>
                                </div>
                                <div class="info-block">
                                    <div class="label">FECHA DE INGRESO</div>
                                    <Input Value="@("01/01/25")" Disabled />
                                </div>
                                <div class="info-block">
                                    <div class="label">NÚMERO DE HANDY</div>
                                    <Input Value="@("2")" Disabled />
                                </div>
                            </div>
                        </Card>
                    </div>
                </AntDesign.Col>

                <AntDesign.Col Xs="24" Sm="24" Md="24" Lg="16" Xl="18">
                    <Card Bordered="false" class="services-card">
                        <div class="header-servicios">
                            <div class="banner-container">
                                <div class="servicios-banner">
                                    <div class="banner-image-container">
                                        <img src="Imagenes/banderin.png" alt="Banderín de servicios" class="banderin-image" />
                                        <div class="banner-number-overlay">55</div>
                                    </div>
                                    <div class="banner-text">TOTAL DE SERVICIOS EN 2024</div>
                                </div>
                            </div>
                            @*<Button Class="report-button">
                                <i class="fa-solid fa-magnifying-glass report-icon"></i>
                                Ver Reporte Completo
                            </Button>*@
                        </div>

                        <div class="estadisticas-servicios">
                            <Statistic Title="SERVICIOS INTERVINIENTES"
                                    Value="14"
                                    ValueStyle="font-size: 2em; color: #a51c16; font-weight: bold;" />
                            <Divider Type="@DividerType.Vertical" class="stats-divider" />
                            <Statistic Title="SERVICIOS APRESTOS"
                                    Value="41"
                                    ValueStyle="font-size: 2em; color: #a51c16; font-weight: bold;" />
                            <Divider Type="@DividerType.Vertical" class="stats-divider" />
                            <Statistic Title="SERVICIOS CHOFER"
                                    Value="0"
                                    ValueStyle="font-size: 2em; color: #a51c16; font-weight: bold;" />
                        </div>
                    </Card>

                    <Card Bordered="false" class="services-card2">
                        <div class="header-servicios">
                            <div class="banner-container"> 
                                <div class="servicios-banner"> 
                                    <div class="banner-image-container">
                                        <img src="Imagenes/banderin.png" alt="Banderín de puntaje" class="banderin-image" />
                                    </div>
                                    <div class="banner-text">PUNTAJE</div>
                                </div>
                            </div>
                        </div>
                        <div class="estadisticas-puntuaje">
                            <Statistic Title="PUNTAJE MENSUAL"
                                                Value="14"
                                                ValueStyle="font-size: 2em; color: #a51c16; font-weight: bold;" />
                            <Divider Type="@DividerType.Vertical" class="stats-divider" />
                            <Statistic Title="PUNTAJE ANUAL"
                                                Value="41"
                                                ValueStyle="font-size: 2em; color: #a51c16; font-weight: bold;" />
                            <Divider Type="@DividerType.Vertical" class="stats-divider" />
                            <Statistic Title="LICENCIA MENSUAL"
                                                Value="23"
                                                ValueStyle="font-size: 2em; color: #a51c16; font-weight: bold;" />
                            <Divider Type="@DividerType.Vertical" class="stats-divider" />
                            <Statistic Title="LICENCIA ANUAL"
                                                Value="12"
                                                ValueStyle="font-size: 2em; color: #a51c16; font-weight: bold;" />
                            <Divider Type="@DividerType.Vertical" class="stats-divider" />
                            <Statistic Title="FIRMAS"
                                                Value="65"
                                                ValueStyle="font-size: 2em; color: #a51c16; font-weight: bold;" />
                        </div>
                    </Card>

                    @*<Card Bordered="false" class="tools-card">
                        <div class="tools-title">HERRAMIENTAS</div>

                        <Row Gutter="20">
                            <AntDesign.Col Xs="24" Sm="12" Md="12" Lg="8" Xl="6" Class="tool-col">
                                <Button class="tool-button">
                                    Cantidad de Firmas en el Mes
                                </Button>
                            </AntDesign.Col>

                            <AntDesign.Col Xs="24" Sm="12" Md="12" Lg="8" Xl="6" Class="tool-col">
                                <Button class="tool-button">
                                    Puntuaje Mensual
                                </Button>
                            </AntDesign.Col>

                            <AntDesign.Col Xs="24" Sm="12" Md="12" Lg="8" Xl="6" Class="tool-col">
                                <Button class="tool-button">
                                    Puntuaje Anual
                                </Button>
                            </AntDesign.Col>

                            <AntDesign.Col Xs="24" Sm="12" Md="12" Lg="8" Xl="6" Class="tool-col">
                                <Button class="tool-button">
                                    Licencias Mensuales
                                </Button>
                            </AntDesign.Col>

                            <AntDesign.Col Xs="24" Sm="12" Md="12" Lg="8" Xl="6" Class="tool-col">
                                <Button class="tool-button">
                                    Licencias Anuales
                                </Button>
                            </AntDesign.Col>

                            <AntDesign.Col Xs="24" Sm="12" Md="12" Lg="8" Xl="6" Class="tool-col">
                                <Button class="tool-button">
                                    Mi Intervenciones por mes
                                </Button>
                            </AntDesign.Col>

                            <AntDesign.Col Xs="24" Sm="12" Md="12" Lg="8" Xl="6" Class="tool-col">
                                <Button class="tool-button">
                                    Mis Trabajos
                                </Button>
                            </AntDesign.Col>
                        </Row>
                    </Card>*@
                </AntDesign.Col>
            </Row>
        </div>
    </Content>
</Layout>

