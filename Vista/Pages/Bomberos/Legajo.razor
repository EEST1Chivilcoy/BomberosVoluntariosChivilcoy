@page "/Bomberos/Legajo"

<link rel="stylesheet" href="css/LegajoEstilos.css" />

<PageTitle>Panel de Control de Legajos</PageTitle>

<Layout>
    <Content>
        

        <div style="padding: 30px;">
            
            <Row  Style="margin-bottom: 20px;">
                <AntDesign.Col>
                     <Button Type="default" OnClick="CerrarSesion" Style="@($"color: #555; border-color: #ccc;")">
                        Cerrar Sesión
                    </Button>
                </AntDesign.Col>
            </Row>

            <Row Gutter="30">
                <AntDesign.Col Span="6">
                    <div style="position: relative;">
                        
                        <div class="avatar-container">
                            <Avatar Src="Imagenes/ROSSI.png" 
                                    Style="@($"width: 160px; height: 160px; border: 10px solid {ColorAmarilloAcento};")" />
                        </div>

                        <Card Bordered="false" Style="@($"border-radius: 15px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); background-color: {ColorGrisFondoTarjeta}; padding-top: 60px;")">
                            
                            <div  style="padding-bottom: 20px;">
                                
                                <div style="text-align: center; margin-bottom: 25px; margin-top: 5px;">
                                    <div class="name-box" style="@($"background-color: {ColorAmarilloAcento}; color: white; padding: 8px 5px; font-weight: bold; margin-bottom: 5px; font-size: 1.4em;")">AGUSTIN ESTEBAN ROSSI</div>                                    
                                    <div class="subtitle-text">AYUDANTE MAYOR</div>
                                </div>
        
                                <div class="info-block">
                                    <div class="label">D.N.I</div>
                                    <Input Value="@("36.997.084")" Disabled />
                                </div>
                                <div class="info-block">
                                    <div class="label">LEGAJO</div>
                                    <Input Value="@("170")" Disabled />
                                </div>
                                <div class="info-block">
                                    <div class="label">CUERPO</div>
                                    <div class="value-box">Sociedad de Bomberos Voluntarios Chivilcoy</div>
                                </div>
                                <div class="info-block">
                                    <div class="label">FECHA DE INGRESO</div>
                                    <Input Value="@("01/01/25")" Disabled />
                                </div>

                            </div>
                        </Card>
                    </div>
                </AntDesign.Col>

                <AntDesign.Col Span="16">
                    <Card Bordered="false" Style="margin-bottom: 30px; background-color: #f7f7f7;">
                        <div style="display: flex; align-items: center; justify-content: space-between;">
                            
                            <div style="display: flex; align-items: center; gap: 20px;">
                                <div style="@($"background-color: {ColorAmarilloAcento}; padding: 15px 25px; font-size: 2.5em; font-weight: bold; color: {ColorRojo};")">
                                    55
                                </div>
                                <div style="color: @ColorRojo;">
                                    <div style="font-size: 1.2em; font-weight: bold;">TOTAL DE SERVICIOS EN 2024</div>
                                </div>
                            </div>
                            
                            <Button  Icon="area-chart">
                                Ver Reporte Completo
                            </Button>
                        </div>

                        <div style="display: flex; justify-content: space-around; margin-top: 20px;">
                            <Statistic Title="SERVICIOS INTERVINIENTES" Value="14" ValueStyle="@($"font-size: 2em; color: {ColorRojo}; font-weight: bold;")" />
                            <Divider Style="height: 60px; margin: 0 40px;" />
                            <Statistic Title="SERVICIOS APRESTOS" Value="41" ValueStyle="@($"font-size: 2em; color: {ColorRojo}; font-weight: bold;")" />
                            <Divider  Style="height: 60px; margin: 0 40px;" />
                            <Statistic Title="SERVICIOS CHOFER" Value="0" ValueStyle="@($"font-size: 2em; color: {ColorRojo}; font-weight: bold;")" />
                        </div>
                    </Card>

                    <div>
                        <div style="font-size: 1.5em; font-weight: bold; margin-bottom: 15px;">HERRAMIENTAS</div>
                        <div style="display: flex; gap: 15px; flex-wrap: wrap;">
                            <Button Style="@($"background-color: {ColorAmarilloAcento}; color: {ColorRojo}; border: 1px solid #e0b420;")"> Credencial Digital </Button>
                            <Button Style="@($"background-color: {ColorAmarilloAcento}; color: {ColorRojo}; border: 1px solid #e0b420;")"> Mi Presentismo </Button>
                            <Button Style="@($"background-color: {ColorAmarilloAcento}; color: {ColorRojo}; border: 1px solid #e0b420;")"> Mi Intervenciones por mes </Button>
                            <Button Style="@($"background-color: {ColorAmarilloAcento}; color: {ColorRojo}; border: 1px solid #e0b420;")"> Mis horas trabajadas </Button>
                            <Button Style="@($"background-color: {ColorAmarilloAcento}; color: {ColorRojo}; border: 1px solid #e0b420;")"> Mis Trabajos </Button>
                        </div>
                    </div>
                </AntDesign.Col>
            </Row>
        </div>
    </Content>
</Layout>

@code {
    private const string ColorRojo = "#a51c16"; 
    private const string ColorAmarilloAcento = "#edb34d";
    private const string ColorGrisFondoTarjeta = "#e6e6e6f1"; 

    private void CerrarSesion()
    {
        Console.WriteLine("Sesión Cerrada");
    }
}