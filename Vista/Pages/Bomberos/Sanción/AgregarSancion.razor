    }

    .modal-crear-sancion .ant-modal-title {
        color: white !important;
    }

    .modal-crear-sancion .ant-modal-header {
            background-color: #A63333;
            padding: 16px 24px;

    }
    .modal-crear-sancion-content {
        padding: 24px;
    }
    .modal-crear-sancion-form-item {
        margin-bottom: 20px;
        position: relative;
        padding-left: 10px;
