@page "/cuerpo-activo"
@layout InicioLayout
@inject IBomberoService BomberoService
@inject IComisionDirectivaService ComisionDirectivaService
@inject IMessageService MessageService
@using AntDesign
@using Vista.Data.Models.Personas.Personal
@using Vista.Data.Enums.Personal.ComisionDirectiva
@using Vista.Services

<Content Class="cuerpo-section">
    <div class="cuerpo-container">
        <div class="cuerpo-header">
            <Title Level="1" Class="cuerpo-title">
                @GetTituloPorCategoria()
            </Title>
            <div class="cuerpo-separator"></div>
            <Paragraph Class="cuerpo-subtitle">
                @GetSubtituloPorCategoria()
            </Paragraph>
        </div>

        <Row Gutter="(24, 24)" Style="margin-bottom: 80px;">
            @foreach (var persona in personasMostradas)
            {
                <AntDesign.Col Xs="24" Sm="12" Md="8" Lg="6" Xl="6" Style="margin-bottom: 30px; display: flex;">
                    <Card Class="persona-card" Hoverable
                          Style="width: 100%; display: flex; flex-direction: column; overflow: visible;">
                        <div class="persona-content">
                            <div class="persona-photo-wrapper">
                                <div class="persona-photo-circle">
                                    @if (!string.IsNullOrEmpty(persona.Foto))
                                    {
                                        <img src="@persona.Foto" alt="@persona.Nombre" class="persona-photo-img" />
                                    }
                                    else
                                    {
                                        <div class="persona-photo-placeholder">
                                            <i class="fa-solid fa-user" style="font-size: 3rem; color: #ffffffff;"></i>
                                        </div>
                                    }
                                </div>
                                <div class="persona-badge">
                                    @persona.Rango
                                </div>
                            </div>
                            <div class="persona-info">
                                <Title Level="4" Class="persona-nombre">
                                    @persona.Nombre
                                </Title>
                                <div class="persona-stats">
                                    <div class="stat-item">
                                        <span class="stat-icon"></span>
                                        <Text Style="font-weight: 500; color: #666;">@persona.AniosServicio a帽os</Text>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </Card>
                </AntDesign.Col>
            }
        </Row>

        <Row Gutter="(16, 16)" Style="justify-content: center; margin-top: 60px;">
            <AntDesign.Col Xs="12" Sm="6" Md="6" Lg="6" Xl="6">
                <div @onclick="() => CambiarCategoria(CategoriaPersonal.CuerpoActivo)" class="filter-card-wrapper">
                    <Card Class="@GetFilterCardClass(CategoriaPersonal.CuerpoActivo)" Hoverable>
                        <div class="filter-icon"></div>
                        <Title Level="2" Class="filter-number">
                            @cantidadCuerpoActivo
                        </Title>
                        <Text Class="filter-label">
                            Bomberos Activos
                        </Text>
                    </Card>
                </div>
            </AntDesign.Col>
            <AntDesign.Col Xs="12" Sm="6" Md="6" Lg="6" Xl="6">
                <div @onclick="() => CambiarCategoria(CategoriaPersonal.Reserva)" class="filter-card-wrapper">
                    <Card Class="@GetFilterCardClass(CategoriaPersonal.Reserva)" Hoverable>
                        <div class="filter-icon"></div>
                        <Title Level="2" Class="filter-number">
                            @cantidadReserva
                        </Title>
                        <Text Class="filter-label">
                            Personal de Reserva
                        </Text>
                    </Card>
                </div>
            </AntDesign.Col>
            <AntDesign.Col Xs="12" Sm="6" Md="6" Lg="6" Xl="6">
                <div @onclick="() => CambiarCategoria(CategoriaPersonal.ComisionDirectiva)" class="filter-card-wrapper">
                    <Card Class="@GetFilterCardClass(CategoriaPersonal.ComisionDirectiva)" Hoverable>
                        <div class="filter-icon"></div>
                        <Title Level="2" Class="filter-number">
                            @cantidadComisionDirectiva
                        </Title>
                        <Text Class="filter-label">
                            Comisi贸n Directiva
                        </Text>
                    </Card>
                </div>
            </AntDesign.Col>

            <AntDesign.Col Xs="12" Sm="6" Md="6" Lg="6" Xl="6">
                <div @onclick="() => CambiarCategoria(CategoriaPersonal.Aspirantes)" class="filter-card-wrapper">
                    <Card Class="@GetFilterCardClass(CategoriaPersonal.Aspirantes)" Hoverable>
                        <div class="filter-icon"></div>
                        <Title Level="2" Class="filter-number">
                            @cantidadAspirantes
                        </Title>
                        <Text Class="filter-label">
                            Aspirantes
                        </Text>
                    </Card>
                </div>
            </AntDesign.Col>
        </Row>
    </div>
</Content>

