@page "/"
@layout InicioLayout
@using Microsoft.AspNetCore.Authorization
@attribute [AllowAnonymous]

<Content Class="hero-section">
    <Row Style="min-height: 100%; width: 100%; display: flex; align-items: center;">
        <AntDesign.Col Xs="24" Sm="24" Md="12" Lg="12" Xl="12">
            <div style="padding: 40px 20px;">
                <Title Level="1" Class="hero-title">
                    Desde 1945 al Servicio de<br />
                    la Comunidad
                </Title>
                <Paragraph Class="hero-description">
                    FUNDADA EL 7 DE JULIO DE 1945, LA SOCIEDAD DE BOMBEROS<br />
                    VOLUNTARIOS DE CHIVILCOY ES FIEL A SUS PRINCIPIOS.
                </Paragraph>
            </div>
        </AntDesign.Col>
        <AntDesign.Col Xs="24" Sm="24" Md="12" Lg="12" Xl="12">
            <div style="text-align: center; display: flex; justify-content: center; align-items: center; height: 100%;">
                <img src="/Imagenes/Logos.png"
                     alt="Sociedad Bomberos Voluntarios Chivilcoy"
                     class="main-logo"
                     style="max-width: 350px; width: 100%; height: auto; margin: 0;" />
            </div>
        </AntDesign.Col>
    </Row>
</Content>

<div class="section-separator">
    <div class="separator-pattern"></div>
</div>

<div class="gallery-section">
    <div class="gallery-header">
        <Title Level="2" Class="gallery-title">
            SOCIEDAD DE BOMBEROS VOLUNTARIOS DE CHIVILCOY
        </Title>
        <Paragraph Class="gallery-subtitle">
            ABNEGACIÓN – DESINTERÉS – SACRIFICIO 
        </Paragraph>
    </div>

    <div class="gallery-grid">
        <div class="gallery-item">
            <img src="/Imagenes/1eros_BOMBEROS.jpg" alt="Historia Bomberos 1" class="gallery-image" />
            <div class="gallery-overlay">
                <h4>Fundación 1945</h4>
                <p>Los primeros años de la institución</p>
            </div>
        </div>

        <div class="gallery-item">
            <img src="/Imagenes/MOVIL3.jpg" alt="Historia Bomberos 2" class="gallery-image" />
            <div class="gallery-overlay">
                <h4>Primeros Equipos</h4>
                <p>El crecimiento de la institución</p>
            </div>
        </div>

        <div class="gallery-item">
            <img src="/Imagenes/BOLIVAR-3.png" alt="Historia Bomberos 3" class="gallery-image" />
            <div class="gallery-overlay">
                <h4>Cuerpo Activo</h4>
                <p>Nuestros bomberos en acción</p>
            </div>
        </div>

        <div class="gallery-item">
            <img src="/Imagenes/TecnologiaInnovadora.jpg" alt="Historia Bomberos 4" class="gallery-image" />
            <div class="gallery-overlay">
                <h4>Equipamiento Moderno</h4>
                <p>Tecnología al servicio de la comunidad</p>
            </div>
        </div>

        <div class="gallery-item">
            <img src="/Imagenes/ServicioComunitario.jpg" alt="Historia Bomberos 5" class="gallery-image" />
            <div class="gallery-overlay">
                <h4>Servicio Comunitario</h4>
                <p>Compromiso con Chivilcoy</p>
            </div>
        </div>
    </div>
</div>

<div class="section-separator">
    <div class="separator-pattern"></div>
</div>

<div class="emergency-section">
    <img src="/Imagenes/EmergenciasPagina.png"
         alt="Información de Emergencias"
         class="emergency-image" />
</div>

