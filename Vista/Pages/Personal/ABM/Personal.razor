                        <PropertyColumn Title="üìä Estado" Property="@(c => c.Estado.GetDisplayName())" Sortable />

                        <ActionColumn Title="‚öôÔ∏è Acciones" Align=ColumnAlign.Center>
                            <div class="abm-action-buttons" @onclick:stopPropagation>
                                <Button Type="default" OnClick="() => EditarPersonal(context.Id)">
                                    <Icon Type="edit" /> Editar
                                </Button>
                                @if (context.Estado == EstadoCobrador.Activo)
                                {
                                    <Popconfirm Title="¬øEst√° seguro de dar de baja?"
