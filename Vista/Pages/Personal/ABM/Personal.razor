                                    <Popconfirm Title="¬øEst√° seguro de dar de baja?"
                                                OnConfirm="()=>CambiarEstadoComisionDirectiva(context.Id, EstadoComisionDirectiva.Baja)"
                                                OkText="S√≠" CancelText="No">
                                        <Button Danger>
                                            <Icon Type="down" /> Baja
                                        </Button>
                                    </Popconfirm>
                                }
