<Modal Footer="null" Visible="@EditarVisible" Centered="@true" DefaultMaximized="@true">
    @if (PersonalId > 0)
    {
        @if (TipoPersonal.ToLower() == "bomberos")
        {
            <EditarBombero @key="@($"edit-bombero-{PersonalId}")" BomberoId="@PersonalId" OnCancel="CloseModals" />
        }
        else if (TipoPersonal.ToLower() == "comisiondirectiva")
        {
            <EditarComision @key="@($"edit-comision-{PersonalId}")" ComisionDirectivaId="@PersonalId" OnCancel="CloseModals" />
        }
