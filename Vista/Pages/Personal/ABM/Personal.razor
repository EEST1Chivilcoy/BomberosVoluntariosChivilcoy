                                        OnSearch="()=>searchB(searchString, EstadoB)"
                                        BindOnInput />
                            </div>
                            <Button Type="ButtonType.Primary"
                                    Class="add-button"
                                    OnClick="@(() => navigationManager.NavigateTo("/fire-force/personal/bombero/agregar"))">
