						</FormItem>
					</AntDesign.Col>
					<AntDesign.Col Span="6">
						<FormItem Label="Dotación" Required>
							<EnumSelect TEnum="TipoDotaciones" @bind-Value="@personalView.Dotacion" />
						</FormItem>
					</AntDesign.Col>
					<AntDesign.Col Span="6">
						<FormItem Label="Grado">
