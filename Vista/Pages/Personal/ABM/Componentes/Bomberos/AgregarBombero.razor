<div class="container">
	<div class="page-title">
		<div>
			<Icon Type="fire" Theme="IconThemeType.Fill" Class="page-title-icon" />
			<span>Registro de Nuevo Bombero</span>
		</div>
	</div>

	@if (personalView != null)
	{
